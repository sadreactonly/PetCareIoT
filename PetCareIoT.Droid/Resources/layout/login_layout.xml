<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/login_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:contentDescription="login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:src="@drawable/petcare"
        android:id="@+id/imageView1" />
        
    <android.support.design.widget.TextInputLayout
           android:id="@+id/name_text_input"
           style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
           android:layout_margin="10dp"
           android:background="@color/mtrl_textinput_filled_box_default_background_color"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           >

               <android.support.design.widget.TextInputEditText
            
                   android:id="@+id/name_edit_text"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="Username" />

          </android.support.design.widget.TextInputLayout>
     
    <android.support.design.widget.TextInputLayout
           android:id="@+id/pass_text_input"
           android:layout_margin="10dp"
           android:background="@color/mtrl_textinput_filled_box_default_background_color"
           style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           >

               <android.support.design.widget.TextInputEditText
                   android:id="@+id/pass_edit_text"
                   android:inputType="textPassword"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="Password" />

          </android.support.design.widget.TextInputLayout>
 <RelativeLayout
             android:layout_gravity="center_horizontal"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">
          <ProgressBar
                android:elevation="@dimen/progressBar_elevation"
                android:layout_centerInParent="true"
                android:indeterminate="false"
                android:indeterminateTintMode="src_atop"
                android:indeterminateTint="@color/abc_hint_foreground_material_dark"
                android:visibility="gone"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBarLogin" />
        <Button  
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonLogin" />
    </RelativeLayout>
</LinearLayout>
